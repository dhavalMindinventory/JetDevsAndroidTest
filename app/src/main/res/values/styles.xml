<resources>

    <style name="AppTheme" parent="BaseAppTheme"/>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="BaseAppTheme">
        <item name="android:background">@drawable/splash_layerlist</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextInputLayoutHintAppearance" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

    <style name="TextInputLayoutErrorAppearance" parent="TextAppearance.Design.Error">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

    <!-- Button -->
    <style name="BaseButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>